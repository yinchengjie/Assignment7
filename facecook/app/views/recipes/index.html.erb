<h1>Recipes for <%= @keyword %></h1>

<table border="1">
  <tr class="<%= "title" %>">
    <th></th>
    <th>Title</th>
    <th>Ingredients</th>
  </tr>
  <% @recipes.each do |recipe| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= link_to image_tag(recipe["thumbnail"]), recipe["href"]%></td>
        <td><%= link_to sanitize(recipe["title"]), recipe["href"], class: "special_link" %></td>
        <td><%= sanitize(recipe["ingredients"]) %></td>
      </tr>
  <% end %>
</table>